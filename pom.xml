      <groupId>io.nuun</groupId>
      <artifactId>kernel-specs</artifactId>
      <version>1.0.M1-SNAPSHOT</version>
    </dependency>

    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.6.6</version>
    </dependency>
    
